<h1>Login page</h1>

<div id="form">
  <h2>Login</h2>
  <form action="/login" method="POST">
 
    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Login</button>
 
    {{#if errorMessage}}
        <p style="color:red;">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>